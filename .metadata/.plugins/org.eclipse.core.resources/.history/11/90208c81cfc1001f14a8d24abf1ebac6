<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
<head>
    <title>공공데이터 AJAX 예제</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <h1>청년정책 데이터</h1>
    <button id="loadData">데이터 불러오기</button>
    <div id="dataContainer"></div>

    <script>
        $(document).ready(function() {
            $('#loadData').click(function() {
                $.ajax({
                    url: 'https://api.data.go.kr/path/to/your/api', // API URL
                    method: 'GET',
                    dataType: 'json',
                    success: function(data) {
                        // 성공적으로 데이터를 가져온 경우
                        $('#dataContainer').empty(); // 기존 데이터 정리
                        $.each(data.items, function(index, item) {
                            $('#dataContainer').append('<p>' + item.property + '</p>'); // 데이터 출력
                        });
                    },
                    error: function(xhr, status, error) {
                        // 에러 발생 시
                        $('#dataContainer').html('<p>데이터를 불러오는 데 실패했습니다.</p>');
                    }
                });
            });
        });
    </script>
</body>
</html>