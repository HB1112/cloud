<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
<head>
    <title>공공데이터 AJAX 예제</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <h1>청년정책 데이터</h1>
    <button id="loadData">데이터 불러오기</button>
    <div id="dataContainer"></div>

    <script>
        $(document).ready(function() {
            $('#loadData').click(function() {
                $.ajax({
                    url: 'https://api.odcloud.kr/api/15117002/v1/uddi:989ab5fe-3649-4d45-8c1e-ed392f2080f9?page=1&perPage=10', // 실제 API URL
                    method: 'GET',
                    headers: {
                        'accept': '*/*', // 요청 헤더
                        'Authorization': 'Bearer 2HBVdwEZTtGnvTZdf6lb+4iUIsEdlrxSXhxYwdikwp1HL3VaUR2swjsfFP3qaJiijEn2NeWFX9gXIlnWRVR8AQ==' // 새로운 인증키
                    },
                    dataType: 'json',
                    success: function(data) {
                        // 성공적으로 데이터를 가져온 경우
                        $('#dataContainer').empty(); // 기존 데이터 정리
                        $.each(data.data, function(index, item) {
                            $('#dataContainer').append('<p>' + item.property + '</p>'); // 데이터 출력 (property는 실제 속성명으로 수정)
                        });
                    },
                    error: function(xhr, status, error) {
                        // 에러 발생 시
                        $('#dataContainer').html('<p>데이터를 불러오는 데 실패했습니다.</p>');
                    }
                });
            });
        });
    </script>
</body>
</html>
