<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
<head>
    <title>정책 검색</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        .search-container {
            margin: 20px;
        }
        .search-controls {
            margin-bottom: 20px;
        }
        select, input, button {
            padding: 8px;
            margin-right: 10px;
        }
        #result {
            margin-top: 20px;
            white-space: pre-wrap;
        }
    </style>
    <script>
    $(document).ready(function() {
        $('#searchButton').click(function() {
            var query = $('#searchInput').val();
            var selectedRegions = $('#regionSelect').val();
            
            if (!query) {
                alert('검색어를 입력하세요!');
                return;
            }

            $.ajax({
                url: '/Solocare/policy/search',
                type: 'GET',
                data: { 
                    query: query,
                    srchPolyBizSecd: selectedRegions.join(',')
                },
                contentType: 'application/json;charset=UTF-8',
                success: function(response) {
                    try {
                        var jsonResponse = (typeof response === 'string') ? JSON.parse(response) : response;
                        $('#result').html('<pre>' + JSON.stringify(jsonResponse, null, 2) + '</pre>');
                    } catch (e) {
                        $('#result').html('<p>올바른 JSON 데이터가 아닙니다: ' + e.message + '</p>');
                    }
                },
                error: function(xhr, status, error) {
                    $('#result').html('<p>오류가 발생했습니다. 상태: ' + status + ', 메시지: ' + error + '</p>');
                }
            });
        });
    });
    </script>
</head>
<body>
    <div class="search-container">
        <h1>정책 검색</h1>
        <div class="search-controls">
            <select id="regionSelect" multiple size="5">
                <option value="003002001">서울</option>
                <option value="003002002">부산</option>
                <option value="003002003">대구</option>
                <option value="003002004">인천</option>
                <option value="003002005">광주</option>
                <option value="003002006">대전</option>
                <option value="003002007">울산</option>
                <option value="003002008">경기</option>
                <option value="003002009">강원</option>
                <option value="003002010">충북</option>
                <option value="003002011">충남</option>
                <option value="003002012">전북</option>
                <option value="003002013">전남</option>
                <option value="003002014">경북</option>
                <option value="003002015">경남</option>
                <option value="003002016">제주</option>
                <option value="003002017">세종</option>
            </select>
            <input type="text" id="searchInput" placeholder="검색어를 입력하세요">
            <button id="searchButton">검색</button>
        </div>
        <div id="result"></div>
    </div>
</body>
</html>