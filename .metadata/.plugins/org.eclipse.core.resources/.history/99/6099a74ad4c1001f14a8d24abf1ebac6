<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
<head>
    <title>청년정책 데이터 AJAX 요청</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <h1>청년정책 데이터</h1>
    <button id="loadData">데이터 불러오기</button>
    <div id="dataContainer"></div>
    <button id="nextPage" style="display:none;">다음 페이지</button> <!-- 다음 페이지 버튼 -->
    <input type="hidden" id="currentPage" value="1"> <!-- 현재 페이지 저장 -->

    <script>
        $(document).ready(function() {
            // 페이지 로딩 시 자동 요청
            loadData(1); // 초기 페이지 로드

            $('#loadData').click(function() {
                loadData(1); // 버튼 클릭 시 첫 페이지 요청
            });

            $('#nextPage').click(function() {
                var currentPage = parseInt($('#currentPage').val());
                loadData(currentPage + 1); // 다음 페이지 요청
            });

            function loadData(page) {
                $.ajax({
                    url: 'https://api.odcloud.kr/api/15117002/v1/uddi:989ab5fe-3649-4d45-8c1e-ed392f2080f9?page=' + page + '&perPage=10&serviceKey=2HBVdwEZTtGnvTZdf6lb%2B4iUIsEdlrxSXhxYwdikwp1HL3VaUR2swjsfFP3qaJiijEn2NeWFX9gXIlnWRVR8AQ%3D%3D', // 요청 URL
                    method: 'GET',
                    dataType: 'json', // 응답 데이터 타입
                    success: function(data) {
                        // 성공적으로 데이터를 가져온 경우
                        $('#dataContainer').empty(); // 기존 데이터 정리
                        $.each(data.data, function(index, item) {
                            $('#dataContainer').append('<p>' + item.사업명 + ': ' + item.사업내용 + '</p>'); // 데이터 출력 (속성명 수정 필요)
                        });

                        // 페이지 정보 업데이트
                        $('#currentPage').val(page); // 현재 페이지 업데이트
                        if (data.data.length > 0) {
                            $('#nextPage').show(); // 다음 페이지 버튼 표시
                        } else {
                            $('#nextPage').hide(); // 더 이상 데이터가 없으면 버튼 숨김
                        }
                    },
                    error: function(xhr, status, error) {
                        // 에러 발생 시
                        $('#dataContainer').html('<p>데이터를 불러오는 데 실패했습니다.</p>');
                    }
                });
            }
        });
    </script>
</body>
</html>
