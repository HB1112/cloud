<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
<head>
    <title>정책 검색</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        .search-container {
            margin: 20px;
            font-family: 'Noto Sans KR', sans-serif;
        }
        .search-controls {
            margin-bottom: 20px;
        }
        select, input, button {
            padding: 8px;
            margin-right: 10px;
        }
        .policy-board {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        .policy-board th {
            background-color: #f8f9fa;
            padding: 12px;
            border-top: 2px solid #333;
            border-bottom: 1px solid #ddd;
        }
        .policy-board td {
            padding: 12px;
            border-bottom: 1px solid #ddd;
        }
        .policy-title {
            cursor: pointer;
            color: #333;
        }
        .policy-title:hover {
            text-decoration: underline;
        }
        .policy-detail {
            display: none;
            background-color: #f8f9fa;
            padding: 20px;
            margin: 10px 0;
            border-radius: 5px;
        }
        .detail-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 15px;
        }
        .detail-item {
            margin-bottom: 10px;
        }
        .detail-item strong {
            color: #555;
        }
    </style>
    <script>
    $(document).ready(function() {
        $('#searchButton').click(function() {
            var query = $('#searchInput').val();
            var selectedRegions = $('#regionSelect').val();
            
            if (!query) {
                alert('검색어를 입력하세요!');
                return;
            }

            $.ajax({
                url: '/Solocare/policy/search',
                type: 'GET',
                data: { 
                    query: query,
                    srchPolyBizSecd: selectedRegions ? selectedRegions.join(',') : ''
                },
                contentType: 'application/json;charset=UTF-8',
                success: function(response) {
                    try {
                        var data = (typeof response === 'string') ? JSON.parse(response) : response;
                        displayPolicies(data);
                    } catch (e) {
                        $('#result').html('<p>데이터 처리 중 오류가 발생했습니다: ' + e.message + '</p>');
                    }
                },
                error: function(xhr, status, error) {
                    $('#result').html('<p>오류가 발생했습니다. 상태: ' + status + ', 메시지: ' + error + '</p>');
                }
            });
        });

        function displayPolicies(data) {
            var policies = data.youthPolicyList.youthPolicy;
            // 단일 결과일 경우 배열로 변환
            if (!Array.isArray(policies)) {
                policies = [policies];
            }

            var html = '<table class="policy-board">';
            html += '<thead><tr>';
            html += '<th>번호</th>';
            html += '<th>정책명</th>';
            html += '<th>지역</th>';
            html += '<th>신청기간</th>';
            html += '<th>정원</th>';
            html += '</tr></thead><tbody>';

            policies.forEach(function(policy) {
                html += '<tr>';
                html += '<td>' + policy.rnum + '</td>';
                html += '<td><div class="policy-title" onclick="toggleDetail(' + policy.rnum + ')">' + 
                        policy.polyBizSjnm + '</div>';
                
                // 상세 정보 div
                html += '<div id="detail-' + policy.rnum + '" class="policy-detail">';
                html += '<div class="detail-grid">';
                
                // 주요 정보 표시
                html += createDetailItem('정책 소개', policy.polyItcnCn);
                html += createDetailItem('지원 내용', policy.sporCn);
                html += createDetailItem('지원 규모', policy.sporScvl);
                html += createDetailItem('신청 자격', policy.prcpCn);
                html += createDetailItem('연령', policy.ageInfo);
                html += createDetailItem('전공', policy.majrRqisCn);
                html += createDetailItem('취업상태', policy.empmSttsCn);
                html += createDetailItem('신청 방법', policy.rqutProcCn);
                if (policy.rqutUrla && policy.rqutUrla !== 'null') {
                    html += createDetailItem('신청 링크', '<a href="' + policy.rqutUrla + '" target="_blank">바로가기</a>');
                }
                html += createDetailItem('문의처', policy.cherCtpcCn);
                
                html += '</div></div></td>';
                html += '<td>' + getRegionName(policy.polyBizSecd) + '</td>';
                html += '<td>' + formatPeriod(policy.rqutPrdCn) + '</td>';
                html += '<td>' + policy.sporScvl + '</td>';
                html += '</tr>';
            });

            html += '</tbody></table>';
            $('#result').html(html);
        }

        // 지역 코드를 지역명으로 변환
        function getRegionName(code) {
            const regionCodes = {
                '003002001': '서울', '003002002': '부산', '003002003': '대구',
                '003002004': '인천', '003002005': '광주', '003002006': '대전',
                '003002007': '울산', '003002008': '경기', '003002009': '강원',
                '003002010': '충북', '003002011': '충남', '003002012': '전북',
                '003002013': '전남', '003002014': '경북', '003002015': '경남',
                '003002016': '제주', '003002017': '세종'
            };
            return regionCodes[code.substring(0, 9)] || '기타';
        }

        // 신청기간 포맷팅
        function formatPeriod(period) {
            if (!period || period === 'null') return '-';
            return period.split('\r')[0];
        }
    });

    // 상세 정보 표시 함수
    function createDetailItem(label, value) {
        if (!value || value === 'null') return '';
        return '<div class="detail-item"><strong>' + label + ':</strong> ' + value + '</div>';
    }

    // 상세 정보 토글
    function toggleDetail(rnum) {
        $('#detail-' + rnum).slideToggle();
    }
    </script>
</head>
<body>
    <div class="search-container">
        <h1>청년 정책 검색</h1>
        <div class="search-controls">
            <select id="regionSelect" multiple size="5">
                <option value="003002001">서울</option>
                <option value="003002002">부산</option>
                <option value="003002003">대구</option>
                <option value="003002004">인천</option>
                <option value="003002005">광주</option>
                <option value="003002006">대전</option>
                <option value="003002007">울산</option>
                <option value="003002008">경기</option>
                <option value="003002009">강원</option>
                <option value="003002010">충북</option>
                <option value="003002011">충남</option>
                <option value="003002012">전북</option>
                <option value="003002013">전남</option>
                <option value="003002014">경북</option>
                <option value="003002015">경남</option>
                <option value="003002016">제주</option>
                <option value="003002017">세종</option>
            </select>
            <input type="text" id="searchInput" placeholder="검색어를 입력하세요">
            <button id="searchButton">검색</button>
        </div>
        <div id="result"></div>
    </div>
</body>
</html>